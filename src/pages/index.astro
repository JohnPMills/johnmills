<Separator text="Peer Endorsements" />
<div class="relative pb-20 mx-auto bg-white dark:bg-neutral-950 md:rounded-b-md">
  <!-- Graph pattern (matches your site's aesthetic) -->
  <div class="absolute bottom-0 right-0 w-full h-full overflow-hidden md:rounded-b-md">
    <svg 
      class="absolute right-0 bottom-0 w-[80%] h-[80%] text-neutral-300 dark:text-neutral-800" 
      viewBox="0 0 100 100" 
      preserveAspectRatio="none"
    >
      <!-- Horizontal lines -->
      <line x1="0" y1="20" x2="100" y2="20" stroke="currentColor" stroke-width="0.5" />
      <line x1="0" y1="40" x2="100" y2="40" stroke="currentColor" stroke-width="0.5" />
      <line x1="0" y1="60" x2="100" y2="60" stroke="currentColor" stroke-width="0.5" />
